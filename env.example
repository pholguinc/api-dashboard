# Metro App - Production Environment Configuration
# Copiar este archivo como .env y configurar con valores reales

# ========== CONFIGURACIÓN BÁSICA ==========
NODE_ENV=production
PORT=4000
CLIENT_ORIGIN=https://metro.pe

# ========== API CONFIGURATION ==========
# URL base de la API para Swagger (opcional, se auto-genera si no se especifica)
API_BASE_URL=https://api-dashboard.telemetro.pe
# Ruta donde se servirá la documentación de Swagger (opcional, por defecto: /api-docs)
SWAGGER_PATH=/api-docs

# ========== BASE DE DATOS ==========
MONGODB_URI=mongodb+srv://telemetro_admin:TelemetroPE2024!@telemetro-pe-cluster.qozgyql.mongodb.net/telemetro?retryWrites=true&w=majority&appName=telemetro-pe-cluster
# Para desarrollo local: mongodb://localhost:27017/telemetro

# ========== SEGURIDAD ==========
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambiar_en_produccion
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ========== TWILIO (SMS/OTP) ==========
TWILIO_ENABLED=true
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=tu_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========== FIREBASE (NOTIFICACIONES) ==========
FIREBASE_ENABLED=true
FIREBASE_PROJECT_ID=metro-app-peru
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@metro-app-peru.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\ntu_private_key_aqui\n-----END PRIVATE KEY-----\n"

# ========== CULQI (PAGOS) ==========
CULQI_ENABLED=true
CULQI_PUBLIC_KEY=pk_live_tu_public_key_aqui
CULQI_SECRET_KEY=sk_live_tu_secret_key_aqui
CULQI_WEBHOOK_SECRET=tu_webhook_secret_aqui

# ========== AWS (ALMACENAMIENTO) ==========
AWS_ENABLED=true
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=tu_aws_secret_access_key_aqui
AWS_REGION=us-east-1
AWS_S3_BUCKET=metro-streaming-recordings

# ========== STREAMING PROFESIONAL ==========
STREAMING_ENABLED=true
RTMP_PORT=1935
HLS_PORT=8000
WEBRTC_PORT=9000
MAX_CONCURRENT_STREAMS=100
MAX_VIEWERS_PER_STREAM=1000

# URLs de streaming para producción
STREAMING_HOST=streaming.telemetro.pe
STREAMING_RTMP_HOST=streaming.telemetro.pe
STREAMING_HLS_HOST=streaming.telemetro.pe
STREAMING_PROTOCOL=https
STREAMING_WS_PROTOCOL=wss

# ========== CDN CONFIGURATION ==========
CDN_ENABLED=true
CDN_PROVIDER=cloudflare
CDN_ZONE_ID=tu_cloudflare_zone_id
CDN_API_TOKEN=tu_cloudflare_api_token

# ========== REDIS (CACHE) ==========
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=tu_redis_password

# ========== INFLUXDB (MÉTRICAS) ==========
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=tu_influxdb_token
INFLUXDB_ORG=metro
INFLUXDB_BUCKET=streaming_metrics
INFLUXDB_PASSWORD=metro_influx_2024

# ========== GRAFANA ==========
GRAFANA_PASSWORD=metro_grafana_2024

# ========== SSL/TLS ==========
SSL_CERT_PATH=./ssl/metro.crt
SSL_KEY_PATH=./ssl/metro.key

# ========== FEATURES FLAGS ==========
ENABLE_ADMIN_DASHBOARD=true
ENABLE_FILE_UPLOADS=true
ENABLE_SOCKET_IO=true
ENABLE_STREAMING=true
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true

# ========== UPLOADS ==========
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# ========== MONITORING ==========
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30
ALERT_WEBHOOK_URL=tu_slack_webhook_url

# ========== SEGURIDAD ADICIONAL ==========
STREAM_AUTH_SECRET=tu_stream_auth_secret
WEBHOOK_SECRET=tu_webhook_secret_general
